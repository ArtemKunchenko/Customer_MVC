
@model IEnumerable<Customer_MVC.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CUSTOMERS</h1>
<p>
    <a href="@Url.Action("Create")" class=" btn btn-primary">Create new customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new {id=customer.Id})" class=" btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", new {id=customer.Id})" class=" btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", new {id=customer.Id})" class=" btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>





